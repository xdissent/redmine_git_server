<%# Use full url paths in here because it may be rendered in another controller. %>
<%= div_for post_receive_hook do %>
  <% if User.current.allowed_to?(:manage_post_receive_hooks, @project) %>
    <%= link_to post_receive_hook.name, edit_post_receive_hook_path(@project, @repository, post_receive_hook), remote: true %>
    <%= link_to image_tag("delete.png"), post_receive_hook_path(@project, @repository, post_receive_hook), remote: true, method: :delete, data: { confirm: "Are you sure?" }, style: "vertical-align: middle", class: "delete" %>
  <% else %>
    <%= link_to post_receive_hook.name, post_receive_hook_path(@project, @repository, post_receive_hook), remote: true %>
  <% end %>
<% end %>