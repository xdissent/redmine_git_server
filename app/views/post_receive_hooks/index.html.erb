<h2><%= l(:label_post_receive_hook_plural) %></h2>

<% if @post_receive_hooks.empty? %>
  <p class="nodata"><%= l(:label_no_data) %></p>
<% else %>

  <div class="autoscroll">
    <table class="list entries" id="browser">
      <thead>
        <tr id="root">
          <th><%= l(:field_name) %></th>
          <th><%= l(:field_url) %></th>
          <th></th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @post_receive_hooks.each do |post_receive_hook| %>
          <tr>
            <td><%= link_to post_receive_hook.name, post_receive_hook %></td>
            <td><%= post_receive_hook.url %></td>
            <td><%= link_to l(:button_edit), edit_post_receive_hook_path(post_receive_hook) %></td>
            <td><%= link_to l(:button_delete), post_receive_hook, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
<% end %>

<%= link_to l(:label_post_receive_hook_new), new_post_receive_hook_path %>

<% content_for :sidebar do %>
  <%= render "sidebar" %>
  <%= render "repositories_sidebar" %>
<% end %>